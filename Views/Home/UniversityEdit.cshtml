@model Universities


<form action="/UpdateUn/@Model.UniversityId" method="post" class="well col-sm-12">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-5 well">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label>University Name:</label>
                        <input type="text" asp-for="Name" name="Name" placeholder="University Name" class="form-control"/>
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label>Location:</label>
                        <input type="text" name="Location" asp-for="Location" placeholder="Location..." class="form-control"/>
                        <span asp-validation-for="Location"></span>
                    </div>  
                    <input type="submit" class="btn btn-primary" value="Edit" />
                </div>
            </div>               
        </div>
    </div>
</form> 


