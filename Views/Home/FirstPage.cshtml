@model LoginUser


<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="5000">
    <ol class="carousel-indicators">
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class ="well">
            <h1>University Information...</h1>
        </div>
        <div class="item active">
            <img src="~/images/b1.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
            </div>
        </div>
        <div class ="well">
            <button class="w3-btn w3-white w3-border w3-border-red w3-round-large" data-toggle="modal" data-target="#Login">Login</button>
        </div>
    </div>
</div>
<div class="modal fade"e4 id="Login" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h5 class="modal-title" id="exampleModalLabel">University Registration</h5>
            </div>
            <div class="modal-body">
                <form action="/LoginUser" method="post" class="well">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>Email:</label>
                                <input type="text" name="LogEmail" placeholder="Email..." class="form-control"/>
                                <span asp-validation-for="LogEmail"></span>
                            </div>  
                        </div>
                    </div>
                    <div class="row">      
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>Password:</label>
                                <input type="password" name="LogPassword" placeholder="Password" class="form-control"/>
                                <span asp-validation-for="LogPassword"></span>
                            </div>
                        </div>
                    </div>
                    <input type="submit" class="btn btn-primary" value="Log in" />
                </form> 
            </div>
        </div>
    </div>
</div>